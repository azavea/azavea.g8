#!/bin/bash

set -e


if [[ -n "\${$name;format="upper,snake"$_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
         "Usage: \$(basename "\$0")
Setup external project dependencies.
"
}


if [ "\${BASH_SOURCE[0]}" = "\${0}" ]
then
    case "\${1}" in
        --help)
            usage
            ;;
        *)
            echo -e "\e[32m[$name$] Configuring bloop...\e[0m"
            sbt ";bloopInstall; scalafmt; scalafmtSbt"
            docker-compose up -d database
            ./scripts/migrate
    esac
fi
